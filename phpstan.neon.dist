parameters:
    # 解析対象のパスを指定
    # アプリケーションの主要なPHPファイルとライブラリフォルダを含める
    paths:
        - index.php
        - archive.php
        - search.php
        - phplib/
        - hatenabookmark_run.php
        - keyvalue_file_run.php
        - twittertrend_scraping.php
        - hb_cache_view.php

    # PHPStanの解析レベルを設定
    # 最初はレベル1から始めて、徐々に上げていくのがおすすめです。
    # ここではバランスの良いレベル5を設定しています。
    level: 9

    # PHPStanが無視するエラーの正規表現を指定
    ignoreErrors:
        # 例えば、デタラメな文章生成ロジックで発生する特定の警告を無視する場合
        # - '#Some specific error regex#'

    # PHPStanが動作するために必要なファイルを指定
    # `phplib/`内のファイルが他のファイルから`require`されている場合、
    # autoload が正しく機能しない可能性があるため、ここに指定します。
    # 実際には、`phplib`内の各ファイルを個別に指定する必要があるかもしれません。
    bootstrapFiles:
        - phplib/crawler.class.php
        - phplib/html.class.php
        - phplib/keyvalue_file.class.php